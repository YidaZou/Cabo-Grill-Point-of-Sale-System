</ul>

<div style = "margin-left:auto;margin-right:auto;">
  <table id="myTable" class="tg" style = "text-align: center; font-family: Arial, Helvetica, sans-serif; margin-left:auto;margin-right:auto;">
      <thead style = "text-align: center;">
        <tr style = "text-align: center;">
          <th style="color:white; background-color: rgba(83,42,18,255);">Order Number</th>
          <th style="color:white; background-color: rgba(83,42,18,255);">Date</th>
          <th style="color:white; background-color: rgba(83,42,18,255);">Total Price</th>
          <th style="color:white; background-color: rgba(83,42,18,255);">Order Items</th>
          <th style="color:white; background-color: rgba(83,42,18,255);">Approve</th>
          <th style="color:white; background-color: rgba(83,42,18,255);">Deny</th>
        </tr>
      </thead>
      <tbody id="testBody">
          <% for (var i in orderList) {%>
              <tr id = "table<%=i%>">
                  <td><%=i%></td>
                  <!-- let date = %=orderList[i].orderdate%
                  date = date.substring -->
                  
                  <td><%=orderList[i].orderdate.toLocaleString()%></td>
                  <td>$<%=orderList[i].totalprice%></td>
                  <td><%=orderList[i].orderitems%></td>
                  
                  <td>
                    <form action="http://localhost:3000/approve_order" method="POST">
                      <input type="text" name="approve" class = "info" id = "approve" value = "<%=i%>"></label>
                      <input type="submit" value="Approve"  style="color: green;" >
                    </form>
                  </td>
                  <td>
                    <form action="http://localhost:3000/deny_order" method="POST">
                      <input type="text" name="deny" class = "info" id = "deny" value = "<%=i%>"></label>
                      <input type="submit" value="Deny"  style="color: red;" >
                    </form>
                  </td>
              </tr>
          <% } %>
      </tbody>
    </table>
  </div>

